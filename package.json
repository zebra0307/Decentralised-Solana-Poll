{
  "name": "gill-next-tailwind-counter",
  "displayName": "Fullstack Counter Boilerplate",
  "description": "Next.js, Tailwind, Anchor Counter example, gill (based on @solana/kit), Wallet UI",
  "usecase": "Starter",
  "keywords": [
    "anchor-counter",
    "gill",
    "nextjs",
    "react",
    "solana-kit",
    "tailwind",
    "typescript",
    "wallet-ui"
  ],
  "create-solana-dapp": {
    "instructions": [
      "To configure the Anchor deployment keypair, run this:",
      "+{pm} run setup",
      "Run Anchor commands:",
      "+{pm} run anchor build | test | localnet | deploy"
    ],
    "rename": {
      "counter": {
        "to": "{{name}}",
        "paths": [
          "anchor",
          "src"
        ]
      },
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    },
    "versions": {
      "anchor": "0.31.1",
      "solana": "2.1.0"
    }
  },
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "anchor": "cd anchor && anchor",
    "anchor-build": "cd anchor && anchor build",
    "anchor-localnet": "cd anchor && anchor localnet",
    "anchor-test": "cd anchor && anchor test",
    "build": "next build",
    "codama:js": "codama run js -c ./anchor/codama.js",
    "ci": "npm run build && npm run lint && npm run format:check && npm run codama:js",
    "dev": "next dev --turbopack",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint",
    "setup": "npm run anchor keys sync && npm run anchor build && npm run codama:js",
    "start": "next start"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@solana-mobile/wallet-standard-mobile": "^0.4.1",
    "@solana/webcrypto-ed25519-polyfill": "^2.3.0",
    "@tanstack/react-query": "^5.89.0",
    "@wallet-ui/react": "2.0.0",
    "@wallet-ui/react-gill": "2.0.0",
    "@wallet-ui/tailwind": "2.0.0",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codama": "^1.3.3",
    "gill": "0.11.0",
    "jotai": "^2.14.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8"
  },
  "devDependencies": {
    "@codama/cli": "^1.3.1",
    "@codama/nodes-from-anchor": "^1.2.5",
    "@codama/renderers-js": "^1.3.4",
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.6",
    "esrun": "^0.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "ws": "^8.18.3"
  }
}
